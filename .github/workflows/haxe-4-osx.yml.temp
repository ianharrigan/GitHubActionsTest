name: Haxe 4 (OSX)

on: [push]

jobs:
  build:

    runs-on: macos-latest

    steps:
    - uses: actions/checkout@v1
    - uses: ./.github/actions/haxe
      with:
        platform: osx
        haxe-version: 4.0.3

    - name: Build app
      run: |
        haxelib install js.hxml
        haxe js.hxml
